/* pages/person/person.wxss */
@import '../wxss/main.wxss';
/* 头像框 */
.avatarBox {
  display: block;
  box-sizing: border-box;
  width: 25%;
  margin: 2.5% 7.5%;
  padding: 0;
  border: 3px #6177ff solid;
  border-radius: 50%;
  overflow: hidden;
}
.avatar {
  width: 100%;
}

/* 用户基本信息框 */
.infoBox {
  display: block;
  box-sizing: border-box;
  width: 40%;
  margin: 2.5%;
  padding: 5% 0;
}
/* 昵称 */
.nickName {
  font-weight: 700;
  letter-spacing: 2px;
  font-size: 1rem;
}
/* 身份 */
.identity_box {
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
  width: 100%;
  margin: 2.5% 0 0 0;
}
.identity {
  display: block;
  box-sizing: border-box;
  padding: 1% 2.5%;
  margin: 0 2.5% 0 0;
  border-radius: 0.25rem;
  font-size: 0.75rem;
  text-align: center;
  background-image: linear-gradient(to right, #8595ff, #6177ff);
  color: white;
}