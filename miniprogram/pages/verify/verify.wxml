<!--pages/verify/verify.wxml-->
<view class="theme_full_title">审核</view>
<!-- 返回 -->
<view class="back" bindtap="navBack">{{back}} 返回</view>

<block wx:for="{{content}}" wx:key="item">
  <view class="full_width_box">
    <!-- 用户信息 -->
    <view class="info_flexbox">
      <view class="avatar_box" style="height: {{avatarHeight}}px;">
        <image src="{{item.avatar}}" mode="aspectFill" class="avatar"></image>
      </view>
      <view class="info_box">
        <view class="nickName">{{item.nickName}}</view>
      </view>
    </view>
    <!-- 正文 -->
    <view class="ctn_box">
      <block wx:for="{{item.ctn}}" wx:for-item="ctn" wx:key="ctn">
        <view class="ctn_prg">{{ctn}}</view>
      </block>
    </view>
    <!-- 审核按钮 -->
    <button class="theme_button_2" data-id="{{item._id}}" bindtap="notPass">不通过</button>
    <button class="theme_button" data-id="{{item._id}}" bindtap="pass">审核通过</button>
  </view>
</block>
