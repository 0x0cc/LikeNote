/* pages/index/index.wxss */
@import '../wxss/main.wxss';

/* 发言 */
.fix_button {
  display: block;
  position: fixed;
  width: 15%;
  right: 5%;
  z-index: 999;
  border-radius: 50%;
  background-image: linear-gradient(to right, #8595ff, #6177ff);
  box-shadow: 0 0 10px lightgrey;
}
.fix_button image {
  width: 60%;
  margin: 20%;
}

/* 用户信息展示框 */
.info_flexbox {
  display: flex;
  box-sizing: border-box;
  width: 100%;
  padding: 2.5% 0;
}
/* 头像 */
.avatar_box {
  display: block;
  width: 15%;
  margin: 0 2.5%;
  border-radius: 50%;
  border: 2px #6177ff solid;
  overflow: hidden;
}
.avatar {
  width: 100%;
}
/* 用户信息 */
.info_box {
  display: block;
  box-sizing: border-box;
  width: 75%;
  margin: auto 2.5%;
}
.nickName {
  letter-spacing: 1px;  
  font-size: 1.15rem;
}
/* 内容展示框 */
.ctn_box {
  display: block;
  box-sizing: border-box;
  line-height: 1.5rem;
  width: 100%;
  padding: 2.5% 0;
}
/* 一段 */
.ctn_prg {
  width: 100%;
  word-wrap: normal;
  white-space: pre-wrap;
  font-size: 0.85rem;
  text-indent: 1.5rem;
}