/* pages/index/index.wxss */
@import '../wxss/main.wxss';

/* 顶部标题栏 */
.top_nav_box {
  display: flex;
  box-sizing: border-box;
  position: relative;
  width: 100%;
  padding: 0 30%;
  margin: 0;
  text-align: center;
  font-size: 1rem;
  z-index: 1;
}
.top_nav {
  display: block;
  position: relative;
  z-index: 2;
  width: 50%;
  margin: 0;
  padding: 0;
  font-size: 1.15rem;
}
.top_slide_block_left {
  display: block;
  position: absolute;
  bottom: -2px !important;
  width: 15%;
  height: 10px;
  background-image: linear-gradient(to right, #8595ff, #6177ff);
  z-index: -1;
  border-radius: 2rem;
  margin: auto 2.5%;
  transition: all 0.5s;
}
.top_slide_block_right {
  display: block;
  position: absolute;
  bottom: -2px !important;
  width: 15%;
  height: 10px;
  background-image: linear-gradient(to right, #8595ff, #6177ff);
  z-index: -1;
  border-radius: 2rem;
  margin: auto 22.5%;
  transition: all 0.5s;
}

/* 发言 */
.fix_button {
  display: block;
  position: fixed;
  width: 15%;
  right: 5%;
  z-index: 999;
  border-radius: 50%;
  background-image: linear-gradient(to right, #8595ff, #6177ff);
  box-shadow: 0 0 10px lightgrey;
}
.fix_button image {
  width: 60%;
  margin: 20%;
}

/* 用户信息展示框 */
.info_flexbox {
  display: flex;
  box-sizing: border-box;
  width: 100%;
  padding: 2.5% 0;
}
/* 头像 */
.avatar_box {
  display: block;
  width: 15%;
  margin: 0 2.5%;
  border-radius: 50%;
  border: 2px #6177ff solid;
  overflow: hidden;
}
.avatar {
  width: 100%;
  height: 100%;
}
/* 用户信息 */
.info_box {
  display: block;
  box-sizing: border-box;
  width: 75%;
  margin: auto 2.5%;
}
.nickName {
  letter-spacing: 1px;  
  font-size: 1rem;
}
.time {
  letter-spacing: 1px;
  font-size: 0.75rem;
  color: #6177ff;
}
/* 内容展示框 */
.ctn_box {
  display: block;
  box-sizing: border-box;
  line-height: 1.5rem;
  width: 100%;
  padding: 2.5% 0;
}
/* 一段 */
.ctn_prg {
  width: 100%;
  word-wrap: normal;
  white-space: pre-wrap;
  font-size: 0.85rem;
  text-indent: 1.5rem;
}

/* 底部日期/点赞/评论 */
.ctn_bottom {
  display: flex;
  flex-direction: row-reverse;
  width: 100%;
  padding: 0 2.5%;
  box-sizing: border-box;
  border-top: 0.5px lightgrey dashed;
}
.cmt_box {
  display: block;
  box-sizing: border-box;
  width: fit-content;
  padding: 2.5% 2.5% 0 2.5%;
  margin: 0 2.5% -2.5% 2.5%;
  line-height: 0.75rem;
}
.cmt_icon {
  width: 80%;
  margin: 0 10%;
  padding: 0;
}
.cmt_desc {
  width: 100%;
  text-align: center;
  font-size: 0.75rem;
  color: #555555;
}